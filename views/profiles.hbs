            <img id="navbar-profile-pic" src="https://via.placeholder.com/40" alt="Profile">
        </a>
    </nav>

    <h1>Create F1 Profile</h1>

    <form action="/addProfile" method="POST" enctype="multipart/form-data">
        <div class="profile-card">
            <div>
                <img id="profile-pic-preview" src="https://via.placeholder.com/100" alt="Profile Picture">
                <input type="file" id="profile-pic" name="profilePicture" accept="image/*" onchange="previewImage(event)">
            </div>
            <div>
                <div class="form-group">
                    <label>Username:</label><br>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label>First Name:</label><br>
                    <input type="text" id="first-name" name="firstName" required>
                </div>
                <div class="form-group">
                    <label>Last Name:</label><br>
                    <input type="text" id="last-name" name="lastName" required>
                </div>
                <div class="form-group">
                    <label>Pronouns:</label><br>
                    <input type="text" id="pronouns" name="pronouns">
                </div>
                <div class="form-group">
                    <label>Team:</label><br>
                    <input type="text" id="team" name="team" placeholder="Take the quiz to find out!" disabled>
                    <a href="quiz.html"><button type="button">Take the Quiz</button></a>
                </div>
                <div class="form-group">
                    <label>Country:</label><br>
                    <select id="country" name="country">
                        <option value="US">United States</option>
                        <option value="GB">United Kingdom</option>
                        <option value="FR">France</option>
                        <option value="DE">Germany</option>
                        <option value="IT">Italy</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Bio:</label><br>
                    <textarea id="bio" name="bio" rows="3" cols="30" placeholder="Short bio..."></textarea>
                </div>
                <div class="form-actions">
                    <button type="reset">Cancel</button>
                    <button type="submit">Save</button>
                </div>
            </div>
        </div>
    </form>

    <h2>Profile Preview</h2>
    {{#if user}}
    <div class="profile-card">
        <div>
            <img src="{{user.profilePicture}}" alt="Profile Picture" style="max-width: 100px;">
        </div>
        <div>
            <p><strong>Username:</strong> {{user.username}}</p>
            <p><strong>First Name:</strong> {{user.firstName}}</p>
            <p><strong>Last Name:</strong> {{user.lastName}}</p>
            <p><strong>Pronouns:</strong> {{user.pronouns}}</p>
            <p><strong>Team:</strong> {{user.team}}</p>
            <p><strong>Country:</strong> {{user.country}}</p>
            <p><strong>Bio:</strong> {{user.bio}}</p>
        </div>
    </div>
    {{else}}
    <p>No profile data available.</p>
