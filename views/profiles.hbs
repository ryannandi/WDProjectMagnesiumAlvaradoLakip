<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profiles</title>
  <link rel="stylesheet" href="/style.css"> <!-- Link to your CSS file -->
</head>
<body>
  <nav>
    <a href="/">Home</a>
    <a href="#add-profile">Add Profile</a>
  </nav>

  <h1>Profiles</h1>

  <!-- Display the list of profiles -->
  <section>
    {{#if profiles.length}}
      <ul>
        {{#each profiles}}
          <li>
            <h2>{{username}}</h2>
            <p><strong>First Name:</strong> {{firstName}}</p>
            <p><strong>Last Name:</strong> {{lastName}}</p>
            <p><strong>Pronouns:</strong> {{pronouns}}</p>
            <p><strong>Team:</strong> {{team}}</p>
            <p><strong>Country:</strong> {{country}}</p>
            <p><strong>Bio:</strong> {{bio}}</p>
            <a href="/deleteProfile?id={{id}}" class="delete-button">Delete</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No profiles found. Add a new profile below!</p>
    {{/if}}
  </section>

  <!-- Form to add a new profile -->
  <section id="add-profile">
    <h2>Add a New Profile</h2>
    <form action="/addProfile" method="POST">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required><br>

      <label for="firstName">First Name:</label>
      <input type="text" id="firstName" name="firstName" required><br>

      <label for="lastName">Last Name:</label>
      <input type="text" id="lastName" name="lastName" required><br>

      <label for="pronouns">Pronouns:</label>
      <input type="text" id="pronouns" name="pronouns"><br>

      <label for="team">Team:</label>
      <input type="text" id="team" name="team"><br>

      <label for="country">Country:</label>
      <input type="text" id="country" name="country"><br>

      <label for="bio">Bio:</label>
      <textarea id="bio" name="bio" rows="4" cols="50"></textarea><br>

      <button type="submit">Add Profile</button>
    </form>
  </section>
</body>
</html>